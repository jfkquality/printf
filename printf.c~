#include <stdio.h>
#include "holberton.h"

/**
 * _printf - print
 * @format: print string with specifiers
 *
 * Return: exit code?
 */
int _printf(const char *format, ...)
{
	/* va_list list; */
	int i = 0;
	char specifier;

	/* va_start(list, format); */
	while (format && format[i])  /* < _strlen(format)) */
	{
		if (format[i] == '%')
		{
			specifier = get_spec(format[i + 1]);
			if (specifier != '\0') /* Send specifier, and arg to print_arg */
				_putchar(specifier); /* print_arg(specifier, format, ...); */
			/* else */
			/* 	break; /\* yes> Or exit (-1)? Or print error (new function)? *\/ */
		}
		else
			_putchar(format[i]);
		i++;
	}
	/* printf("\n"); */
	/* va_end(list); */
	return (i);
}
